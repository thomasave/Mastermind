<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="preferencescreen">
    <EditTextPreference
        android:key="rows"
        android:inputType="number"
        android:showDefault="true"
        android:defaultValue="7"
        android:summary="Select the desired number of rows"
        android:title="Number of rows"
        />
    <ListPreference
        android:key="columns"
        android:title="Number of columns"
        android:summary="Select the desired number of columns"
        />
    <ListPreference
        android:key="backgroundpreference"
        android:title="Background"
        android:summary="Choose the type of background"
        android:entries="@array/background"
        android:entryValues="@array/background"
        android:defaultValue="None"
        />
    <ListPreference
        android:key="adpreference"
        android:title="Advertisements"
        android:summary="Change advertisement behaviour"
        android:entries="@array/ads"
        android:entryValues="@array/ads"
        android:defaultValue="Full"
        />

</PreferenceScreen>